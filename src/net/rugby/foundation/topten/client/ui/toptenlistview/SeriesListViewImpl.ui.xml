<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
    		 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    		 xmlns:c="urn:import:com.google.gwt.user.cellview.client" >
	<ui:style>
		.buttons {
			margin: 20px 20px;
		}
		.header {
			background-color: #001123;
			color: #fff;
			font-size: 14px;
			padding: 10px;
			font-weight: bold;
		}
		.shadow {
			box-shadow: 0px 2px 2px 2px #dddddd;
		}
	</ui:style>
    <g:HTMLPanel width="100%" ui:field="topTenPanel" styleName="{style.shadow}">
        <b:Well>
            <b:SplitDropdownButton text="Ratings" ui:field="criteriaDropDown" icon="GITHUB">
			</b:SplitDropdownButton>
			<b:SplitDropdownButton text="Week" ui:field="weekDropDown" icon="GITHUB">
			</b:SplitDropdownButton>
			<g:HTML ui:field="listTitle"></g:HTML>
        </b:Well>
    	<b:TabPanel tabPosition="left" ui:field="tabPanel"/>
    	<b:Well><g:VerticalPanel ui:field="notes"></g:VerticalPanel></b:Well>
	</g:HTMLPanel>


</ui:UiBinder>