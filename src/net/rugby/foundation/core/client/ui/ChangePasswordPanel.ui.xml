<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:core='urn:import:net.rugby.foundation.core.client.ui'>

	<g:VerticalPanel styleName="accountPanel">
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Label styleName="accountLabel">Old Password:</g:Label>
				<g:PasswordTextBox ui:field="oldPassword"
					styleName="accountInput"></g:PasswordTextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label styleName="accountLabel">New Password:</g:Label>
				<g:PasswordTextBox ui:field="password1" styleName="accountInput"></g:PasswordTextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label styleName="accountLabel">New Password (again):</g:Label>
				<g:PasswordTextBox ui:field="password2" styleName="accountInput"></g:PasswordTextBox>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:HorizontalPanel>
			<g:Button ui:field="submit">Change Password</g:Button>
			<g:Button ui:field="cancel">Cancel</g:Button>

			<g:Label ui:field="error" styleName="serverResponseLabelError"></g:Label>
		</g:HorizontalPanel>
		<g:Anchor ui:field="forgotPassword" href="javascript:;">Forgot Password?</g:Anchor>
	</g:VerticalPanel>

</ui:UiBinder>