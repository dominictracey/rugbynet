	xmlns:core='urn:import:net.rugby.foundation.core.client.ui'
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

			<b:PanelBody ui:field="nativeLayer">
				<b:Form >
					<b:FormGroup>
						<b:Label>Temporary password</b:Label>
						<b:Input ui:field="oldPassword" type="PASSWORD"></b:Input>
						<b:HelpBlock>From your email</b:HelpBlock>
					</b:FormGroup>
					<b:FormGroup>
						<b:Label>New password</b:Label>
						<b:Input ui:field="password1" type="PASSWORD"></b:Input>
					</b:FormGroup>
					<b:FormGroup>
						<b:Label>New password (again)</b:Label>
						<b:Input ui:field="password2" type="PASSWORD"></b:Input>
					</b:FormGroup>

					<b:ButtonGroup ui:field='buttonBar'>
						<b:Button ui:field="submit" type="PRIMARY">Change Password</b:Button>
						<b:Button ui:field="cancel" type="DEFAULT">Cancel</b:Button>
					</b:ButtonGroup>

				</b:Form>
				<g:Label ui:field="error" styleName="serverResponseLabelError"></g:Label>
			</b:PanelBody>

