<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:core='urn:import:net.rugby.foundation.core.client.ui' >
	
	<ui:style>
		.playersViewButtonHPanel {
			margin: 5px 0px 0x 5px;
		}
		
		.playersViewPlayersFlexTable {
			margin: 5px 0px 5px 0px;
		}
	</ui:style>
	<g:HorizontalPanel>
		<core:ExternalAuthenticatorPanel ui:field="nonNativeLogins"/>
		<g:HTMLPanel>
			<div id="floatContainer">
				<div id="orContainer">-Or-
				</div>
			</div>
		</g:HTMLPanel>
		<g:VerticalPanel styleName="accountPanel">
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label styleName="accountLabel">Email address:</g:Label>
					<g:TextBox ui:field="emailAddress" styleName="accountInput"></g:TextBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label styleName="accountLabel">Password:</g:Label>
					<g:PasswordTextBox ui:field="password1"
						styleName="accountInput"></g:PasswordTextBox>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Button ui:field="submit">Login</g:Button>
				<g:Button ui:field="cancel">Cancel</g:Button>
				
				<g:Label ui:field="error" styleName="serverResponseLabelError"></g:Label>
			</g:HorizontalPanel>
			<g:Anchor ui:field="forgotPassword" href="javascript:;">Forgot Password?</g:Anchor>
		</g:VerticalPanel>
	</g:HorizontalPanel>


</ui:UiBinder>