<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:core='urn:import:net.rugby.foundation.core.client.ui'
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.playersViewButtonHPanel {
		margin: 5px 0px 0x 5px;
		}

		.playersViewPlayersFlexTable {
		margin: 5px 0px 5px 0px;
		}

		.bigpad {
		padding: 20px 20px 20px 20px;
		background: #fff;
		
		}

		.dropshadow {
			box-shadow: 10px 10px 5px #888888;
		}

		.vertical-align {
	        display: flex;
    		align-items: center;
		}	
	</ui:style>

	<b:Panel styleName="{style.dropshadow}">
		<g:HorizontalPanel styleName="{style.bigpad}">
			<core:ExternalAuthenticatorPanel
				ui:field="nonNativeLogins" />
			<g:HTMLPanel  styleName="{style.bigpad}">
				<div id="floatContainer">
					<div id="orContainer">-Or-
					</div>
				</div>
			</g:HTMLPanel>
			<g:VerticalPanel addStyleNames='{style.vertical-align},{style.bigpad}'>
				<g:VerticalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="accountLabel">Email address:</g:Label>
						<g:TextBox ui:field="emailAddress" styleName="accountInput"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="accountLabel">Password:</g:Label>
						<g:PasswordTextBox ui:field="password1"
							styleName="accountInput"></g:PasswordTextBox>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<g:Label ui:field="error" styleName="serverResponseLabelError"></g:Label>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel  styleName="{style.bigpad}">
			<b:Button ui:field="submit" type="PRIMARY">Login</b:Button>
			<b:Button ui:field="cancel" type="DEFAULT">Cancel</b:Button>
			<g:Anchor ui:field="forgotPassword" href="javascript:;">Forgot Password?</g:Anchor>
		</g:HorizontalPanel>
	</b:Panel>


