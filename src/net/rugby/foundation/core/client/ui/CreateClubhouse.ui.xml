<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.playersViewButtonHPanel {
			margin: 5px 0px 0x 5px;
		}
		
		.playersViewPlayersFlexTable {
			margin: 5px 0px 5px 0px;
		}
	</ui:style>
	<g:VerticalPanel styleName="accountPanel">
		<g:HorizontalPanel>

			<g:Label styleName="createAccountLabel">Clubhouse Name:</g:Label>
			<g:TextBox ui:field="clubhouseName" styleName="accountInput"></g:TextBox>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName="createAccountLabel">Clubhouse Description:</g:Label>
			<g:TextBox ui:field="clubhouseDescription" styleName="accountInput"></g:TextBox>
		</g:HorizontalPanel>



		<g:HorizontalPanel styleName="buttonbox">
				<g:Button ui:field="submit">Create</g:Button>
				<g:Button ui:field="cancel">Cancel</g:Button>
			<g:Label ui:field="error" styleName="serverResponseLabelError"></g:Label>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>