<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .playersViewButtonHPanel {
      margin: 5px 0px 0x 5px;
    }
    .playersViewPlayersFlexTable {
      margin: 5px 0px 5px 0px;
    }

  </ui:style>

  <g:DecoratorPanel width="100%">
    <g:VerticalPanel width="100%">
    	<g:HTML wordWrap="true" ui:field="groupInfoBasic"/>
    	<g:Anchor ui:field="editGroupInfoLink">edit</g:Anchor>
    	<g:HorizontalPanel><g:HTML ui:field="clickHere"> Need suggestions? Click here &gt;&gt;&nbsp; </g:HTML><g:Anchor ui:field="draftAnalysisLink" href="javascript:;">Draft Analysis</g:Anchor></g:HorizontalPanel>
    	<g:TextArea ui:field="editGroupInfo"></g:TextArea>
    	<g:Button ui:field="editGroupInfoSubmit">Save</g:Button>
    	<g:Button ui:field="editGroupInfoCancel">Cancel</g:Button>
    	
		<g:FlexTable ui:field="playersTable" addStyleNames="{style.playersViewPlayersFlexTable}" width="100%"/>
		<g:HorizontalPanel addStyleNames="{style.playersViewButtonHPanel}">
		  <g:Button ui:field="button1">button</g:Button>
		  <g:Button ui:field="button2">button</g:Button>
		  <g:Button ui:field="button3">button</g:Button>
		  <g:Button ui:field="button4">button</g:Button>
		</g:HorizontalPanel>
    </g:VerticalPanel>
  </g:DecoratorPanel>

</ui:UiBinder>