<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .playersViewButtonHPanel {
      margin: 5px 0px 0x 5px;
    }
    .playersViewPlayersFlexTable {
      margin: 5px 0px 5px 0px;
    }

  </ui:style>
	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Label>Email address (not displayed):</g:Label>
				<g:Label>Team Name (displayed):</g:Label>
				<g:Label>Password:</g:Label>
				<g:Label>Password (again):</g:Label>
   			</g:VerticalPanel>
			<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:TextBox ui:field="emailAddress"></g:TextBox>	<g:HTML>*</g:HTML>
				</g:HorizontalPanel>
				<g:TextBox ui:field="nickName"></g:TextBox>	
				<g:PasswordTextBox ui:field="password1"></g:PasswordTextBox>	
				<g:PasswordTextBox ui:field="password2"></g:PasswordTextBox>	
	   		</g:VerticalPanel>			
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Button ui:field="submit">Sign Up</g:Button>
				<g:Button ui:field="cancel">Cancel</g:Button>
			</g:VerticalPanel>
			<g:Label ui:field="error" styleName="serverResponseLabelError"></g:Label>
			<g:HTML>* - email address must be valid to claim prizes!</g:HTML>
		</g:HorizontalPanel>
   </g:VerticalPanel>
</ui:UiBinder>