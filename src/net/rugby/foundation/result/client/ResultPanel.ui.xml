<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:Style>
		.vertical-align {
	        display: flex;
    		align-items: center;
		}	
	</ui:Style>
	<g:HTMLPanel ui:field="root">
		<b:Row ui:field="row" addStyleNames='{style.vertical-align}'>
			<b:Column ui:field="left" size="1">
				<b:Anchor ui:field="left_arrow"></b:Anchor>
			</b:Column>
			<b:Column ui:field="mid" size="10">
				<b.html:Div ui:field="scores"></b.html:Div>
			</b:Column>
			<b:Column ui:field="right" size="1">
				<b:Anchor ui:field="right_arrow"></b:Anchor>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>

</ui:UiBinder>