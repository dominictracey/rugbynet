<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:com.google.gwt.user.datepicker.client" >

    <ui:style>
    .playersViewButtonHPanel {
      margin: 5px 0px 0x 5px;
    }
    .playersViewPlayersFlexTable {
      margin: 5px 0px 5px 0px;
    }
		.important {
			font-weight: bold;
		}
    </ui:style>

    <g:DialogBox ui:field="popupBox" >

        <g:HTMLPanel>

            <!--
             Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete 
			widget names. The ui:field attribute binds an element to a field in the owner 
			class. See the GWT docs on UI Binder for more details.
            -->

            <table>

                <tr>

                    <td>
Display Name:
                    </td>

                    <td>

                        <g:TextBox ui:field="displayName" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Country:
                    </td>

                    <td>

                        <g:TextBox ui:field="country" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Number Caps:
                    </td>

                    <td>

                        <g:TextBox ui:field="numCaps" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Birthdate:
                    </td>

                    <td>

                        <d:DatePicker ui:field="birthDate" >
                        </d:DatePicker>
                    </td>
                </tr>

                <tr>

                    <td colspan="2" >

                        <g:Button
                            styleName="{style.important}"
                            ui:field="save" >
Save
                        </g:Button>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
    </g:DialogBox>

</ui:UiBinder>