<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" >

    <ui:style>
		.panel {
			background-color: ivory;
		}

		.newpanel {
			background-color: lightgrey;
			padding:5px;
			margin: 5px;
		}
		.urlbox {
			width:500px;

		}
		.editArea {
			width:500px;
			background-color:lightblue;
			padding:20px;
		}
		.jobArea {
			width:500px;
			background-color:lightorange;
			padding:20px;
		}
    </ui:style>

    <g:VerticalPanel styleName="{style.panel}" >

        <g:SimplePanel ui:field="menuBarPanel" >
        </g:SimplePanel>

        <g:HorizontalPanel>

            <g:VerticalPanel styleName="{style.panel}" >

                <g:VerticalPanel ui:field="treePane" styleName="{style.panel}" >

                    <g:Label ui:field="status" >
Status
                    </g:Label>

                    <g:Tree ui:field="compTree" >
                    </g:Tree>
                </g:VerticalPanel>

                <g:VerticalPanel styleName="{style.newpanel}" >

                    <g:HTML>

                        <strong>
Import Comp:&nbsp;
                        </strong>
                    </g:HTML>

                    <g:HorizontalPanel styleName="{style.newpanel}" >

                        <g:Label>
Url:&nbsp;
                        </g:Label>

                        <g:TextBox
                            styleName="{style.urlbox}"
                            ui:field="url" >
                        </g:TextBox>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel styleName="{style.newpanel}" >

                        <g:Label>
ResultType:&nbsp;
                        </g:Label>

                        <g:ListBox ui:field="resultType" >
                        </g:ListBox>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel styleName="{style.newpanel}" >

                        <g:Button ui:field="fetch" >
Fetch
                        </g:Button>

                        <g:Button ui:field="save" >
bwat?
                        </g:Button>

                        <g:Button ui:field="createAdmin" >
Create Admin
                        </g:Button>

                        <g:Button ui:field="sanityCheck" >
Sanity Check
                        </g:Button>

                        <g:Button ui:field="testMatchStats" >
Fetch Match Stats
                        </g:Button>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:VerticalPanel>

            <g:VerticalPanel>

                <g:SimplePanel
                    styleName="{style.editArea}"
                    ui:field="editArea" >
                </g:SimplePanel>

                <g:SimplePanel
                    styleName="{style.jobArea}"
                    ui:field="jobArea" >
                </g:SimplePanel>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:VerticalPanel>

</ui:UiBinder>