<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:com.google.gwt.user.datepicker.client" >

    <ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	    .playersViewButtonHPanel {
      		margin: 5px 0px 0x 5px;
    	}
    	.playersViewPlayersFlexTable {
     		margin: 5px 0px 5px 0px;
			width: 100%;
    	}
		.fullwidth {
			width: 100%;
		}
    </ui:style>
	<g:VerticalPanel addStyleNames="{style.fullwidth}">
	    
	 <g:SimplePanel ui:field='menuBarPanel'></g:SimplePanel>
    
    <g:HTMLPanel>
	<g:Button ui:field="addNew">Add New</g:Button>
        <g:FlexTable
            addStyleNames="{style.playersViewPlayersFlexTable}"
            
           ui:field="seriesConfigurationTable" />
    </g:HTMLPanel>
</g:VerticalPanel>
</ui:UiBinder>