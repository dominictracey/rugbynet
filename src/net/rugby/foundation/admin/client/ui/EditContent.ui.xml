<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" >


	<b:WellForm>
	    <b:ControlLabel>Title</b:ControlLabel>
	    <b:TextBox placeholder="menu name" ui:field="title"></b:TextBox>
	    <b:HelpBlock>Shows up in menu drop down and in footer.</b:HelpBlock>
	    <b:ControlLabel>Body</b:ControlLabel>
	    <b:TextArea placeholder="content" ui:field="body"></b:TextArea>
	    <b:HelpBlock>Displayed to end user.</b:HelpBlock>
	    <b:ControlLabel>Active</b:ControlLabel>
	    <b:CheckBox ui:field="active"></b:CheckBox>
	    <b:HelpBlock>Uncheck to hide from site.</b:HelpBlock>
	    <b:ControlLabel>Div</b:ControlLabel>
	    <b:TextBox ui:field="div"></b:TextBox>
	    <b:HelpBlock>HTML div to display content.</b:HelpBlock>
	    <b:ControlLabel>Show in menu</b:ControlLabel>
	    <b:CheckBox ui:field="showInMenu"></b:CheckBox>
	    <b:HelpBlock>Uncheck to remove from menu.</b:HelpBlock>
	   	<b:ControlLabel>Show in footer</b:ControlLabel>
	    <b:CheckBox ui:field="showInFooter"></b:CheckBox>
	    <b:HelpBlock>Uncheck to remove from footer</b:HelpBlock>
		<b:ControlLabel>Menu order</b:ControlLabel>
	    <b:TextBox ui:field="menuOrder"></b:TextBox>
	    <b:HelpBlock>Smaller numbers display earlier</b:HelpBlock>
	    
        <b:Nav alignment="RIGHT">
        	<b:NavWidget ui:field='buttonBar'>
        	    		<b:Button ui:field="save" type="PRIMARY">Save</b:Button>
						<b:Button ui:field="cancel">Cancel</b:Button>	
        	</b:NavWidget>
        </b:Nav>
			
	</b:WellForm>

</ui:UiBinder> 