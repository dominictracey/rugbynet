<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    
    <ui:style>
    .playersViewButtonHPanel {
      margin: 5px 0px 0x 5px;
    }
    .playersViewPlayersFlexTable {
      margin: 5px 0px 5px 0px;
    }
		.important {
			font-weight: bold;
		}
    </ui:style>

<!--     <g:DialogBox ui:field="popupBox" > -->

        <g:HTMLPanel>

            <!--
             Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete 
			widget names. The ui:field attribute binds an element to a field in the owner 
			class. See the GWT docs on UI Binder for more details.
            -->

            <table>

                <tr>

                    <td>
Display Name:
                    </td>

                    <td>

                        <g:TextBox ui:field="displayName" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Country:
                    </td>

                    <td>

                        <g:ListBox ui:field="country" >
                        </g:ListBox>
                    </td>
                </tr>

                <tr>

                    <td>
Number Caps:
                    </td>

                    <td>

                        <g:TextBox ui:field="numCaps" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Height (cm):
                    </td>

                    <td>

                        <g:TextBox ui:field="height" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Weight (kg):
                    </td>

                    <td>

                        <g:TextBox ui:field="weight" >
                        </g:TextBox>
                    </td>
                </tr>

                <tr>

                    <td>
Birthdate:
                    </td>

                    <td>

                        <d:DatePicker ui:field="birthDate" >
                        </d:DatePicker>
                    </td>
                </tr>
                <tr>

                    <td>
First Name:
                    </td>

                    <td>

                        <g:TextBox ui:field="givenName" >
                        </g:TextBox>
                    </td>
                </tr>
                
                                <tr>

                    <td>
Last Name:
                    </td>

                    <td>

                        <g:TextBox ui:field="surName" >
                        </g:TextBox>
                    </td>
                </tr>
                 <tr>

                    <td>
Short Name:
                    </td>

                    <td>

                        <g:TextBox ui:field="shortName" >
                        </g:TextBox>
                    </td>
                </tr>
                 <tr>

                    <td>
Twitter:
                    </td>

                    <td>

                        <g:TextBox ui:field="twitter" >
                        </g:TextBox>
                    </td>
                </tr>
                <tr>

                    <td>
	<b:CheckBox ui:field="twitterNotAvailable">Twitter Not Available</b:CheckBox>
                    </td>

                    <td>
	<g:Anchor ui:field='twitterGoogle'></g:Anchor><br/>			
                    </td>
                </tr>    
                                <tr>

                    <td>
Image URL:
                    </td>

                    <td>

                        <g:TextBox ui:field="imageUri" >
                        </g:TextBox>
                    </td>
                </tr>     
                                <tr>

                    <td>
Position:
                    </td>

                    <td>

                        <g:ListBox ui:field="position" >
                        </g:ListBox>
                    </td>
                </tr>  
                                <tr>

                    <td>
scrum.com id:
                    </td>

                    <td>

                        <g:TextBox ui:field="scrumId" >
                        </g:TextBox>
                    </td>
                </tr>  
                                                <tr>

                    <td>
scrum.com link:
                    </td>

                    <td>

                        <g:Anchor ui:field="scrumLink" >
                        </g:Anchor>
                    </td>
                </tr>  
                                <tr>

                    <td>
rugby.net id:
                    </td>

                    <td>

                        <g:Label ui:field="id" >
                        </g:Label>
                    </td>
                </tr>  
                <tr>

                    <td colspan="2" >

                        <g:Button
                            styleName="{style.important}"
                            ui:field="saveButton" >
Save
                        </g:Button>
                         <g:Button
                            styleName="{style.important}"
                            ui:field="cancelButton" >
Cancel

                        </g:Button>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
<!--     </g:DialogBox> -->

</ui:UiBinder>