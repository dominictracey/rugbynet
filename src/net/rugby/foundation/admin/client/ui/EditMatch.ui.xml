<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<!-- Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete 
			widget names. The ui:field attribute binds an element to a field in the owner 
			class. See the GWT docs on UI Binder for more details. -->

				Display Name: <g:TextBox ui:field='displayName'></g:TextBox><br/>
				Scheduled:  <g:TextBox ui:field='scheduled'></g:TextBox> Scrum Id: <g:TextBox ui:field='scrumId'></g:TextBox><br/>
				Match Status: <g:ListBox ui:field='status'></g:ListBox>
				Workflow Status: <g:ListBox ui:field='workFlowStatus'></g:ListBox>
				Locked: <g:CheckBox ui:field='locked'></g:CheckBox><br/>
				Home Score: <g:TextBox ui:field='homeScore'></g:TextBox>
				Visitor Score: <g:TextBox ui:field='visitorScore'></g:TextBox>
				<g:Button styleName="{style.important}" ui:field="saveScore">Save Score</g:Button><br/><br/>
				<g:Anchor ui:field='pipelineLink'></g:Anchor><br/>
				<g:Anchor ui:field='scrumLink'></g:Anchor><br/>
		<g:Button styleName="{style.important}" ui:field="save">Save</g:Button>
		<g:Button styleName="{style.important}" ui:field="lock">Lock</g:Button>
		<g:Button styleName="{style.important}" ui:field="fetchLineups">Fetch Lineups</g:Button>
		<g:Button styleName="{style.important}" ui:field="fetchScore">Fetch Score</g:Button>
		<g:Button styleName="{style.important}" ui:field="fetchMatchStats">Fetch Match Stats</g:Button>		
		<g:Button styleName="{style.important}" ui:field="showHomeTeamMatchStats">Home Team Match Stats</g:Button>		
		<g:Button styleName="{style.important}" ui:field="showVisitingTeamMatchStats">Visiting Team Match Stats</g:Button>	
		<g:Button styleName="{style.important}" ui:field="showLog">Log</g:Button>	
					</g:HTMLPanel>
</ui:UiBinder> 